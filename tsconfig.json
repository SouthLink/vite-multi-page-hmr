{
  "compilerOptions": {
      "jsx": "react",
      "lib": [
          "es6",
          "dom"
      ],
      "rootDir": "web/src",
      "module": "commonjs",
      "target": "ESNext",
      "sourceMap": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "allowJs": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./web/src",
      "paths": {
          "@Lib/*": ["lib/*"],
          "@Api": ["services/index.ts"],
          "@Components/*": ["components/*"],
          "@Types/*": ["types/*"],
          "@Styles/*": ["styles/*"],
          "@Layouts": ["layouts/index.ts"],
      }
  },
  "include": [
      "web",
      "**/*.ts",
      "**/*.tsx",
      "**/*.d.ts"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "**/*.js"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}